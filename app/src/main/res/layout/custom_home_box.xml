<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow_effect_more"
    android:paddingBottom="20dp"
    android:paddingLeft="8dp"
    android:paddingRight="13dp">

    <ImageView
        android:id="@+id/grid_Cover"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068"
        app:srcCompat="@drawable/home" />

    <TextView
        android:id="@+id/grid_Title_Name"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="5dp"
        android:text="How Long"
        android:textColor="#df000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/grid_Artist_Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grid_Cover"
        app:layout_constraintVertical_bias="0.909" />

    <TextView
        android:id="@+id/grid_Artist_Name"
        android:layout_width="100dp"
        android:layout_height="15dp"
        android:layout_marginBottom="5dp"
        android:text="Charlie Putt"
        android:textColor="#95000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grid_Title_Name" />

    <ImageView
        android:id="@+id/grid_More"
        android:layout_width="20dp"
        android:layout_height="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85"
        app:srcCompat="@drawable/dot_more" />

</android.support.constraint.ConstraintLayout>